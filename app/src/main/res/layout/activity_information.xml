<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".InformationActivity">


    <TextView
        android:id="@+id/info_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/info_state"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/info_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/info_deadline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start"/>

    <RadioGroup
        android:id="@+id/radio_gr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <RadioButton
            android:id="@+id/rd_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rd_dvlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Development"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rd_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploading"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rd_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rd_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closed"
            android:textSize="20sp"/>

    </RadioGroup>
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="50dp">
    <Button
        android:id="@+id/btn_do"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:text="Ok"
        android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>